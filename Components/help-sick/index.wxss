.index {
  width: 100%;
  margin-bottom: 110rpx;
}

.help {
  width: 95%;
  border-radius: 15rpx;
  margin: 20rpx auto 30rpx;
  box-shadow: 0px 0px 7px #dedfdf;
}

.title {
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 15rpx;
}

.title text {
  font-size: 30rpx;
  color: #898989;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.helpImg {
  width: 95%;
  margin: 0 auto 5rpx;
  border-radius: 15rpx;
}

.helpImg image {
  width: 100%;
  height: 350rpx;
  flex: 1;
  object-fit: cover;
  border-radius: 15rpx;
}

.helpAbout {
  width: 100%;
  border-top: 2rpx solid #e0dede;
  height: 60rpx;
  line-height: 60rpx;
  text-align: right;
}

.helpAbout text {
  margin-right: 15rpx;
  font-size: 29rpx;
  letter-spacing: 2rpx;
  color: #898989;
}

.helpMe {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  z-index: 999;
  position: fixed;
  bottom: 0;
  background-color: #43C5FF;
}

.helpMe text {
  margin-left: 10rpx;
  font-size: 30rpx;
  color: #fff;
}

.center {
  position: absolute;
  left: 32%;
}
