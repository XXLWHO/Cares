.index {
  width: 100%;
  margin: 20rpx 0 100rpx;
}

.acticle {
  display: flex;
  width: 100%;
  height: 180rpx;
  margin: 0 auto;
}

.left {
  width: 30%;
  /* background-color: red; */
  margin: 17rpx 20rpx;
}

.left image {
  width: 100%;
  height: 140rpx;
  object-fit: cover;
}

.right {
  width: 25%;
  text-align: right;
  margin: 17rpx 20rpx;
}

.middle {
  width: 45%;
  margin: 17rpx 0;
}

.search {
  width: 100%;
  margin: 0 auto;
  height: 50rpx;
  margin-bottom: 50rpx;
}

.MyTitle {
  color: #898989;
  margin-top: 10rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.MyActicles {
  color: #898989;
  font-size: 27rpx;
  margin-top: 40rpx;
  width: 300rpx;
  overflow: hidden;
  height: 95rpx;
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.MyTime {
  font-size: 28rpx;
  display: block;
  color: #898989;
  margin-top: 10rpx;
  margin-bottom: 50rpx;
}

.MyShare {
  width: 95%;
  box-shadow: 0 0 10rpx #d1cfcf;
  margin: 25rpx auto;
  height: 175rpx;
  border-radius: 15rpx;
}

.ShareMe {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  z-index: 999;
  position: fixed;
  bottom: 0;
  background-color: #43C5FF;
}

.center {
  display: flex;
  position: absolute;
  left: 35%;
}

.center text{
  font-size: 28rpx;
  color: #fff;
  margin-left: 10rpx;
}
