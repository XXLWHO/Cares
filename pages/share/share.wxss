.index {
  width: 100%;
  margin-bottom: 80rpx;
}

.imageUrl {
  width: 100%;
  height: 350rpx;
}

.imageUrl image {
  width: 100%;
  height: 350rpx;
}

.message {
  width: 90%;
  margin: 20rpx auto;
}

.message text {
  color: #898989;
  font-size: 29rpx;
}

.messageInput {
  width: 90%;
  margin: 20rpx auto;
  padding: 20rpx 0;
  box-shadow: 0 0 10rpx #dad8d8;
  border-radius: 15rpx;
}

.Input {
  display: flex;
  padding: 25rpx 0;
}

.Text {
  display: block;
  color: #898989;
  font-size: 28rpx;
  width: 120rpx;
  text-align: right;
  padding-right: 30rpx;
  line-height: 60rpx;
  padding-left: 30rpx;
}

.Input input {
  border: 2rpx solid #e2e1e1;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 10rpx;
  width: 65%;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #898989;
}

.Input textarea {
  width: 62%;
  height: 160rpx;
  border: 2rpx solid #e2e1e1;
  border-radius: 10rpx;
  color: #898989;
  font-size: 28rpx;
  padding: 16rpx 15rpx;
}

.btn {
  width: 90%;
  height: 40rpx;
  margin: 30rpx auto 100rpx;
}

.vanButton {
  border-radius: 15rpx;
}