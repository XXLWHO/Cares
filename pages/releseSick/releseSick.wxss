.index {
  background-image: url('https://ftp.bmp.ovh/imgs/2021/04/45d60af8959b53b3.png');
  width: 100%;
  background-size: cover;
  background-position-x: 50%;
}

.BoxImg {
  width: 100%;
  margin: 0 auto;
  height: 350rpx;
}

.BoxImg image {
  width: 100%;
  height: 350rpx;
}

.relese {
  width: 100%;
  margin: 0 auto;
}

.releseBox {
  width: 90%;
  margin: 0 auto;
}

.point {
  font-size: 30rpx;
  color: #898989;
}

.input {
  width: 100%;
  border-radius: 15rpx;
  box-shadow: 0 0 10rpx #d8d8d8;
  margin: 20rpx 0;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}

.message {
  width: 90%;
  margin: 0 auto;
}

.messageInput {
  padding: 20rpx 0;
  display: flex;
}

.textInput {
  width: 67%;
  height: 60rpx;
  border: 1px solid #c5c3c3;
  border-radius: 10rpx;
  color: #898989;
  font-size: 25rpx;
  padding: 0 15rpx;
}

.Textarea {
  width: 67%;
  height: 160rpx;
  border: 1px solid #c5c3c3;
  border-radius: 10rpx;
  color: #898989;
  font-size: 25rpx;
  padding: 17rpx 15rpx;
}

.Text {
  text-align: right;
  height: 80rpx;
  line-height: 60rpx;
  width: 120rpx;
  color: #898989;
  display: block;
  font-size: 28rpx;
  padding-right: 20rpx;
  margin-left: 15rpx;
}

.buton {
  width: 100%;
  height: 40rpx;
  margin: 30rpx auto 100rpx;
}

.vanButton {
  border-radius: 15rpx;
}