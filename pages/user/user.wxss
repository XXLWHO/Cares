/* pages/user/user.wxss */
.index {
  width: 100%;
  background-color: rgb(248, 246, 246);
}

.avater {
   width: 100%;
   height: 500rpx;
   position: relative;
}

.avater_img {
  z-index: -1;
  width: 100%;
  height: 600rpx;
  filter:blur(20rpx) contrast(.9);
  flex: 1;
  object-fit: cover;
}

.avater_url {
  width: 200rpx;
  height: 200rpx;
  background-color: #fff;
  display: flex;
  border-radius: 50%;
}

.avater_box {
  width: 200rpx;
  height: 150rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0; 
  margin: auto;
}

.user_name {
  margin-top: 30rpx;
  text-align: center;
  color: #5c5a5a;
  font-size: 33rpx;
}

.title {
  width: 100%;
  height: 800rpx;
}

.article {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  border-top: 2rpx solid rgb(211, 209, 209);
  line-height: 100rpx;
  position: relative;
  margin: 15rpx 0;
}

.article_title {
  font-size: 30rpx;
  color: #898989;
}

.icon {
  position: absolute;
  right: 0;
  top: 35rpx;
}

.about {
   width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  border-top: 2rpx solid rgb(211, 209, 209);
  line-height: 100rpx;
  position: relative;
  margin: 15rpx 0;
}
