

.new-bg{
  padding: 10px ;
  background-color: rgba(255, 255, 255, 0.8);
    border-color: rgb(170, 178, 189);
    border-width: 0px;
}
.sticky-box{
  background-color: #ffffff;
  z-index: 100;
  border-bottom: 1px solid #eeeeee;
}
.tab-box{
  padding: 0 30px;
  margin: 10px  auto 17px;
}
.items{
  padding: 0px;
  margin-bottom: 10px;
}
.item-img{
  flex: 1;
  flex-shrink: 0;
  text-align: center;
  color: #717171;
}
.img{
  width: 40px;
  height: 40px;
  margin-bottom: 5px;
}
.item-title{
  font-size: 12px;
}
.class-box{
  margin: 10px;
}
.class-titles{
  background-color: #ffffff;
  margin: 40px 0 15px;
}
.special-img{
  border-radius: 10px;
  height: 120px;
  width: 100%;
}
.title{
  color:#545454;
  font-size: 16px;
  font-weight: bold;
  letter-spacing: 3rpx;

}
.hot-box{
  margin-bottom: 10px;
}
.hot-left{
  flex: 1;
}
.info-box{
  background-color: #F7F7F7;
  margin-bottom: 10px;
}
.left-img{
  width: 60px;
  height: 60px;
  flex-shrink: 0;
  border-radius:5px ;
}
.hot-right{
  flex: 4;
  border-bottom: 1px solid #eeeeee;
}
.right-img{
  width: 20px;
  height: 20px;
  border-radius: 50%;
}
.right-item{
  padding-left: 5px;
}
.right-item-2{
  font-size: 15px;
  color: #686868;
}
.right-item-3{
  margin-top: 2px;
  font-size: 12px;
  letter-spacing: 1rpx;
  color: #9A9A9A;
}
.change-box{
  padding: 10px;
}
.header-box{
  width: 100%;
  height: 350px;
  margin-bottom: 20px;
  position: relative;
}
.header-img{
  border-radius: 10px;
  width: 100%;
height: 100%;
}
.head-title{
  box-sizing: border-box;
  width: 100%;
  background-color: black;
  opacity: 0.6;
  position: absolute;
  bottom: 0px;
  font-size: 15px;
  color: #ffffff;
  font-weight: bold;
  padding: 10px 20px;
  border-radius: 0 0 10px 10px;
}
.head-lit{
  font-size: 12px;
  font-weight: lighter;
}
.info-box{
  margin-bottom: 10px;
  background-color: #F7F7F7;
}
.info-item{
  background-color: #ffffff;
  padding: 10px 0;
  margin-bottom: 10px;
}
.left-box{
  flex: 1;
  flex-shrink: 0;

}
.left-box-img{
  width: 100px;
  height: 130px;
  border-radius: 10px;
}
.right-box{
  box-sizing: border-box;
  width: 100%;
  flex:3;
  padding: 10px;
  position: relative;
}
.right-title{
  font-size: 16px;
  font-weight: bold;
  color: #5C5C5C;
  margin-bottom: 5px;
}
.right-desc{
  font-size: 14px;
  font-weight: lighter;
  color: #838383;
}
.look-btn{
  position: absolute;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  width: 100%;
  padding: 0 10px;
}