/* pages/article/article.wxss */
.index {
  width: 100%;
  background-color: #ffffff;
  margin-bottom: 50rpx;
}

.MyActicle {
  width: 95%;
  box-shadow: 0px 0px 5px #d3d4d4;
  margin:20rpx auto 0;
  border: 1px solid #dddddd;
  border-radius: 15rpx;
}

.acticle {
  display: flex;
  width: 100%;
  height: 180rpx;
  margin: 0 auto;
}

.left {
  width: 30%;
  /* background-color: red; */
  margin: 17rpx 20rpx;
}

.left image {
  width: 100%;
  height: 150rpx;
  object-fit: cover;
}

.right {
  width: 40%;
  text-align: right;
  margin: 17rpx 20rpx;
}

.middle {
  width: 30%;
  margin: 17rpx 0 0;
}

.search {
  width: 100%;
  margin: 0 auto;
  height: 50rpx;
  margin-bottom: 50rpx;
}

.MyTitle {
  color: #898989;
  margin-top: 10rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.MyActicles {
  color: #898989;
  font-size: 27rpx;
  margin-top: 57rpx;
  width: 300rpx;
  overflow: hidden;
  height: 95rpx;
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.MyTime {
  font-size: 28rpx;
  display: block;
  color: #898989;
  margin-bottom: 20rpx;
}

.progress {
  width: 95%;
  margin:0 auto 30rpx;
}

.status {
  font-size: 27rpx;
  color: #898989;
  letter-spacing: 3rpx;
  margin-bottom: 10rpx;
  display: block;
}

.hidden {
  display: none;
}

.noneActicle {
  width: 95%;
  margin: 0 auto 50rpx;
  text-align: center;
}

.noneActicle text {
  font-size: 35rpx;
  color: #898989;
  letter-spacing: 3rpx;
}

.lines {
  padding: 20rpx auto;
}
